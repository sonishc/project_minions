#user-dashboard
  %table.table.table-striped
    %thead
      %tr
        %td{:scope => "col"} ID
        %td{:scope => "col"} Name
        %td{:scope => "col"} Age
        %td{:scope => "col"} Gender
        %td{:scope => "col"} Email
        %td{:scope => "col"} Toys count
    %tbody
      %tr
        %td{:scope => "row"}= @user.id
        %td= @user.name
        %td= @user.age
        %td= @user.sex
        %td= @user.email
        %td= @user.toys.count