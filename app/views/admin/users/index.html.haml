#users-dashboard.users
  %h1 
    All users
    = link_to 'Create new',{action: :index}, remote: true, class: 'badge badge-secondary'
  %table.table.table-striped
    %thead
      %tr
        %td{:scope => 'col'} ID
        %td{:scope => 'col'} Name
        %td{:scope => 'col'} Age
        %td{:scope => 'col'} Gender
        %td{:scope => 'col'} Email
        %td{:scope => 'col'} Sign in count
        %td{:scope => 'col'} Hours on site
        %td{:scope => 'col'} Role
        %td{:scope => 'col'} Manage users
    %tbody
      - @users.all.each do |user|
        %tr
          %td{:scope => 'row'}= user.id
          %td= user.name
          %td= user.age
          %td= user.sex
          %td= user.email
          %td= user.sign_in_count
          %td= ((Time.now - user.created_at) / 1.hour).round
          %td= user.roles[0]&.name
          %td
            = link_to 'Edit',{ action: :edit, id: user.id }, class: 'btn btn-info'
            = link_to 'Delete', user, method: :delete, class: 'btn btn-danger'
            = link_to 'view',{ action: :show, id: user.id }, class: 'btn btn-success'
