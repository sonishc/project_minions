#control_buttons
  %h1.flow-text
    I need
  = link_to "Sleep",
    { action: 'event_switch', event: 'sleep', state: 'sleeped', id: @toy.id },
    remote: true, class: "btn btn-floating  #{ @toy.may_sleep? }"
  = link_to 'Play',
    { action: 'event_switch', event: 'play', state: 'played', id: @toy.id },
    remote: true, class: "btn btn-floating btn #{ @toy.may_play? }"
  = link_to 'Eat',
    { action: 'event_switch', event: 'eat', state: 'ate', id: @toy.id },
    remote: true, class: "btn btn-floating  #{ @toy.may_eat? }"
  = link_to 'Training',
    { action: 'event_switch', event: 'train', state: 'trained', id: @toy.id },
    remote: true, class: "btn btn-floating  #{ @toy.may_train? }"
  = link_to 'Wake up !!!',
    { action: 'event_switch', event: 'wake_up', state: 'wake_up',id: @toy.id },
    remote: true, class: "btn btn-floating  #{ @toy.may_wake_up? }"